# Discord Bot Configuration
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_SERVER_ID=your_server_id_here
DISCORD_CHANNEL_ID=your_channel_id_here

# LLM Provider Configuration
# Options: "lm_studio", "gemini", or "auto" (tries Gemini first, falls back to LM Studio)
LLM_PROVIDER=auto

# LM Studio Configuration (for local AI)
LM_STUDIO_HOST=127.0.0.1
LM_STUDIO_PORT=1234
LM_STUDIO_MODEL=local-model

# Google Gemini Configuration (for cloud AI)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=8192

# Vector Database Configuration
VECTOR_DB_PATH=./data/vector_db

# Bot Configuration
DEFAULT_BOT_PERSONALITY=default
BOT_NAME=Omni-Assistant

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/bot.log

# Memory Configuration
MAX_SHORT_TERM_MEMORY=50
MAX_CONTEXT_RETRIEVAL=5
MEMORY_CLEANUP_INTERVAL=3600
